---
const { title, url } = Astro.props
// https://docs.astro.build/en/reference/configuration-reference/#buildformat
const pathname = new URL(Astro.url).pathname
---

<a class="relative group" href={url}>
  {title}
  <span
    class:list={[
      'inline-block h-[1px] bg-dark dark:bg-light absolute left-0 bottom-0',
      { 'w-full': pathname === url },
      {
        'w-0 group-hover:w-full transition-[width] ease duration-300':
          pathname !== url,
      },
    ]}
  >
    {' '}
  </span>
</a>
