---
const { title, url } = Astro.props
const pathname = new URL(Astro.request.url).pathname
---

<a
  class='relative group'
  href={url}
>
  {title}
  {
    pathname === url ? (
      <span class='inline-block w-full h-[1px] bg-dark dark:bg-light absolute left-0 bottom-0'>
        &nbsp;
      </span>
    ) : (
      <span class='inline-block w-0 h-[1px] bg-dark dark:bg-light absolute left-0 bottom-0 group-hover:w-full transition-[width] ease duration-300'>
        &nbsp;
      </span>
    )
  }
</a>
